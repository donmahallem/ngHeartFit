form([formGroup]="dateForm",(ngSubmit)="onSubmit()")
    div(fxLayout="row",fxLayout.xs="column",fxLayoutAlign="center")
        mat-form-field.input-margin(fxFlex)
            input.inputdate(matInput,[matDatepicker]="picker1",placeholder="Date",formControlName="startdate")
            mat-datepicker-toggle(matSuffix,[for]="picker1")
            mat-datepicker(#picker1)
            mat-hint Start Date
        mat-form-field.input-margin(fxFlex)
            input.inputdate(matInput,[matDatepicker]="picker2",placeholder="Date",formControlName="enddate")
            mat-datepicker-toggle(matSuffix,[for]="picker2")
            mat-datepicker(#picker2)
            mat-hint End Date
        button.input-margin(mat-icon-button,type="submit",color="primary",fxShow,fxShow.xs="false",fxFlexAlign="center")
            mat-icon(aria-label="Refresh the graph") refresh
        button.input-margin(mat-stroked-button,type="submit",color="primary",fxHide,fxHide.xs="false")
            mat-icon(aria-label="Refresh the graph") refresh
            | Update